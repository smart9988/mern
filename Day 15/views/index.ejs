<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        /* unvisited link */
        a:link {
        color:black;
        }
        /* visited link */
        a:visited {
        color: #00FF00;
        }
        a:hover{
            color: blue;
        }
        a:active{
            color: red;
        }

        p::first-line{
            color: blue;
        }

    </style>
</head>
<body>
